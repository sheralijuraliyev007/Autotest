<form asp-action="Tickets" method="post">
    <div class="container mt-4">
        <div class="row g-4">
            @for (int i = 1; i <= 35; i++)
            {
                <div class="col-md-4">
                    <div class="card shadow-lg text-center rounded-4 overflow-hidden">
                        <img src="https://i.pinimg.com/originals/a1/c6/1c/a1c61c093ca626897308f9340e1f891e.jpg" class="card-img-top" alt="Ticket Image">
                        <div class="card-body">
                            <h5 class="card-title text-white">Ticket @i</h5>
                            <button class="btn btn-light w-100" asp-route-id="@i" type="submit">Go to Ticket</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</form>

<style>
    body {
        background: url('https://www.transparenttextures.com/patterns/black-tie.png'), linear-gradient(135deg, rgba(20, 20, 40, 0.85), rgba(30, 50, 90, 0.75)); /* Pattern + Gradient */
        background-size: cover;
        background-attachment: fixed;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #fff;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        z-index: 1;
        position: relative;
    }

    .card {
        transition: all 0.4s ease;
        border: none;
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.8s ease-in-out; /* Apply animation to the card */
    }

    .card:hover {
        transform: translateY(-10px) scale(1.05); /* Smooth hover effect */
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.2);
    }

    .card img {
        transition: transform 0.5s ease;
        object-fit: cover;
        height: 200px;
    }

    .card:hover img {
        transform: scale(1.1); /* Zoom effect on image */
    }

    .card-body {
        position: relative;
        z-index: 2;
        padding: 1.5rem;
        background-color: rgba(0, 0, 0, 0.7);
        border-radius: 0 0 15px 15px;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
        margin-bottom: 1rem;
    }

    .btn {
        transition: background-color 0.3s ease;
        padding: 0.75rem;
        border-radius: 10px;
        font-weight: bold;
    }

    .btn-light {
        background-color: #f0f0f0;
        color: #333;
    }

    .btn-light:hover {
        background-color: #ff5f5f;
        color: #fff;
    }

    /* Background Design */
    .container::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -1;
        background: radial-gradient(circle, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.7));
    }

    /* Keyframe Animation */
    @@-webkit-keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

</style>
